{
  "name": "watchlist-api",
  "version": "1.0.0",
  "type": "module",
  "main": "dist/src/index.js",
  "scripts": {
    "start": "node dist/index.js",
    "build": "tsc",
    "build:watch": "tsc --watch --preserveWatchOutput",
    "serve:dev": "nodemon --watch dist --exec \"node dist/src/index.js\"",
    "predev": "npm run build",
    "dev": "concurrently \"npm run build:watch\" \"npm run serve:dev\"",
    "test": "vitest",
    "test:watch": "vitest watch",
    "test:cov": "vitest run --coverage",
    "test:ui": "vitest --ui"
  },
  "author": "Adam Phillips",
  "license": "MIT",
  "description": "",
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/node": "^22.15.21",
    "@vitest/coverage-v8": "^3.1.4",
    "@vitest/ui": "^3.1.4",
    "concurrently": "^9.1.2",
    "nodemon": "^3.1.10",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3",
    "vitest": "^3.1.4"
  },
  "dependencies": {
    "@types/sqlite3": "^3.1.11",
    "@types/uuid": "^10.0.0",
    "bcrypt": "^6.0.0",
    "dotenv": "^16.5.0",
    "sqlite": "^5.1.1",
    "sqlite3": "^5.1.7",
    "uuid": "^11.1.0"
  }
}
